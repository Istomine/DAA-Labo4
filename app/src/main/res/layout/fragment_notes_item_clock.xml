<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="8dp">

<!-- Icône à gauche -->
<ImageView
    android:id="@+id/list_item_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:src="@drawable/note" />

<!-- Titre principal -->
<TextView
    android:id="@+id/list_item_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/list_item_icon"
    android:layout_marginStart="8dp"
    android:layout_alignParentTop="true"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="Note Title" />

<!-- Description courte ou texte -->
<TextView
    android:id="@+id/list_item_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/list_item_icon"
    android:layout_below="@id/list_item_title"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:textSize="14sp"
    android:text="Short description of the note" />

<!-- Indication de statut temporel -->
<TextView
    android:id="@+id/list_item_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:textSize="14sp"
    android:text="1 month" />

<!-- Icône d'horloge (facultatif, lié au statut) -->
<ImageView
    android:id="@+id/list_item_status_icon"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_toStartOf="@id/list_item_status"
    android:layout_centerVertical="true"
    android:layout_marginEnd="4dp"
    android:src="@drawable/clock" />

</RelativeLayout>
